#!/usr/bin/env sh

set -o errexit  # always exit on error
set -o pipefail # don't ignore exit codes when piping output
# set -x          # enable debugging

IFS="$(printf "\n\t")"

cd "$(dirname "$0")/.."
yarn install

printf "root permissions"
chown -R 1000:1000 "/root/.npm"

printf "installing dependencies"
yarn start:dev
